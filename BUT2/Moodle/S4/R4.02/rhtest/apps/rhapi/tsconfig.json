{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
}
